---
import SectionTitle from '../components/SectionTitle.astro';
import Project from '../components/Project.astro';
import projectImage1 from '../../public/images/project 1.webp';
import projectImage2 from '../../public/images/project 2.webp';
---
<article class="projects | bg-light" id="projects">
    <div class="wrapper flow">
        <SectionTitle title="Projects" />
        <div class="grid">
                <Project projectTitle="Kasbiz Website" projectDescription="A website for a fictional consultant business" projectLink="https://kasbiz.netlify.app/" projectImage={projectImage1.src} />
                <Project projectTitle="Space Tourism Website" projectDescription="Took this challenge from Frontend Mentor" projectLink="https://saidibnali19.github.io/space-tourism-website/" projectImage={projectImage2.src} />
        </div>
    </div>
</article>
<style>
.projects {
    padding-block: calc(var(--space-2xl-3xl) * 2);
}

.projects > div {
    --flow-space: calc(var(--space-m) * 2);
}

.projects > div > div {
    row-gap: calc(var(--space-m) * 2);
}

</style>