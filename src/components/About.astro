    <style>
        .about{
            padding-block: calc(var(--space-2xl-3xl) * 2);
        }

        @media (width > 35em){
            .about > div{
                grid-template-columns: 1fr 1fr;
            }
        }

        .about__skills{
            flex-wrap: wrap;
        }

        .about__skill{
            padding: .75em 1em;
            border-radius: 5px;
        }
    </style>