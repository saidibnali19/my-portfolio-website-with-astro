<article class="contact | wrapper flow" id="contact">
    <h4 class="section-title | fs-700 ff-heading fw-bold text-center">Contact me</h4>
    <form
        class="form | bg-primary flow"
        action="https://formspree.io/f/mgedbqlj"
        method="POST"
    >
        <div class="form__name | flex">
            <label class="form__name-label | fs-500" for="client-name">Name</label>
            <input
                class="form__name-input | ff-heading bg-light"
                type="text"
                name="client-name"
                id="client-name"
                required
                placeholder="Your name"
            />
        </div>
        <div class="form__email | flex">
            <label class="form__email-label | fs-500" for="email">Email</label>
            <input
                class="form__email-input | ff-heading bg-light"
                type="email"
                name="email"
                id="email"
                required
                placeholder="Your email"
            />
        </div>
        <div class="form__message | flex">
            <label class="form__message-label | fs-500" for="message"
                >Message</label
            >
            <textarea
                class="form__message-textarea | ff-heading bg-light"
                name="message"
                id="message"
                required
                placeholder="Your message"
            ></textarea>
        </div>
        <div>
            <button
                class="form__button btn-primary | bg-accent text-primary fs-500 ff-heading fw-bold"
                type="submit"
            >
                Submit
            </button>
        </div>
    </form>
</article>

<style>
.contact{
    padding-block: calc(var(--space-2xl-3xl) * 2);
}

.form__name,.form__email,.form__message{
    flex-direction: column;
}

input, textarea{
    padding: 1rem;
    border: 2px solid hsl(var(--clr-secondary));
    border-radius: .5rem;
    box-shadow: var(--box-shadow);
    transition: box-shadow .3s ease, border-color .3s ease;
}

input:focus-visible,
textarea:focus-visible {
    border-color: hsl(var(--clr-accent));
    box-shadow: var(--box-shadow-lifted);
    outline: none;
}

form:invalid{
    border-color: red;
}

textarea{
    min-height: 15rem;
}
</style>